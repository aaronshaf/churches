{
  "name": "churches",
  "version": "1.0.0",
  "description": "App for discovering churches in a region",
  "main": "index.js",
  "scripts": {
    "build:css": "tailwindcss -i ./src/styles/main.css -o ./public/css/styles.css --minify",
    "build:worker": "bunx esbuild src/index.tsx --bundle --format=esm --platform=neutral --main-fields=module,main --target=es2022 --outfile=dist/worker.js --external:@libsql/client",
    "build:ci": "bun run build:css && bun run build:worker",
    "watch:css": "tailwindcss -i ./src/styles/main.css -o ./public/css/styles.css --watch",
    "dev": "concurrently \"bun run watch:css\" \"wrangler dev\"",
    "build": "bun run build:css && wrangler deploy --dry-run",
    "deploy": "bun run build:css && wrangler deploy",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "bun tsx scripts/run-drizzle-migrate.ts",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed-affiliations": "bun tsx scripts/seed-affiliations.ts",
    "db:import-churches": "bun tsx scripts/import-churches.ts",
    "db:add-comment-type": "bun tsx scripts/add-comment-type.ts",
    "mcp:smoke": "bun run scripts/mcp-smoke.ts",
    "better-auth:setup": "bun tsx scripts/setup-better-auth-env.ts",
    "better-auth:schema": "bun tsx scripts/generate-auth-schema.ts",
    "better-auth:test": "bun tsx scripts/test-better-auth.ts",
    "backup:db": "bun tsx scripts/backup-database.ts",
    "backup:all-tables": "bun tsx scripts/backup-all-tables.ts",
    "test": "bun test",
    "lint": "biome check src/",
    "lint:fix": "biome check --write src/",
    "format": "biome format --write src/",
    "check": "biome check src/",
    "check:staged": "sh scripts/biome-check-staged.sh",
    "check:changed": "sh scripts/biome-check-changed.sh",
    "typecheck": "tsc --noEmit",
    "ci": "CI=true node scripts/check-line-count.js && bun run check && bun run typecheck",
    "ci:pr": "CI=true node scripts/check-line-count.js && bun run check:changed && bun run typecheck && bun test --bail && bun run build:ci",
    "ci:full": "CI=true node scripts/check-line-count.js && bun run check && bun run typecheck && bun test --bail && bun run build:ci",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "Aaron Shafovaloff",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.0.4",
    "@cloudflare/workers-types": "^4.20250619.0",
    "@miniflare/d1": "^2.14.4",
    "@miniflare/shared": "^2.14.4",
    "@types/bun": "^1.3.8",
    "@types/image-size": "^0.8.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.0.3",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "dotenv": "^16.6.1",
    "drizzle-kit": "^0.31.1",
    "esbuild": "^0.25.5",
    "husky": "^9.1.7",
    "image-size": "^2.0.2",
    "lint-staged": "^16.1.2",
    "miniflare": "^4.20250709.0",
    "nanoid": "^5.1.5",
    "postcss": "^8.5.6",
    "tailwindcss": "3",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "wrangler": "^4.22.0",
    "yaml": "^2.8.0"
  },
  "dependencies": {
    "@libsql/client": "^0.17.0",
    "better-auth": "^1.2.12",
    "blurhash": "^2.0.5",
    "drizzle-orm": "^0.44.2",
    "hono": "^4.8.1",
    "html-to-text": "^9.0.5",
    "i18next": "^25.3.2",
    "js-yaml": "^4.1.0",
    "openai": "^5.8.2",
    "xlsx": "^0.18.5",
    "zod": "^3.25.67"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "biome check --write",
      "bash -c 'tsc --noEmit'"
    ],
    "*.{js,jsx,json,css,md}": [
      "biome check --write"
    ]
  },
  "packageManager": "bun@1.2.17"
}
