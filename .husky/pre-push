#!/bin/sh

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
BOLD='\033[1m'
RESET='\033[0m'

echo "${BLUE}${BOLD}ğŸš€ Running pre-push checks...${RESET}"

# Run full TypeScript type check
echo "${BLUE}ğŸ” Running TypeScript type check...${RESET}"
bun run typecheck || {
  echo "${YELLOW}âš ï¸  TypeScript errors detected - these need to be fixed${RESET}"
  # TODO: Re-enable exit 1 after fixing existing TypeScript errors from file splitting
  # exit 1
}

# Run full linting (temporarily disabled until TypeScript errors are fixed)
# echo "${BLUE}ğŸ” Running linting...${RESET}"
# bun run lint
# if [ $? -ne 0 ]; then
#   echo "${RED}âŒ Linting failed${RESET}"
#   exit 1
# fi

# Check all file line counts
echo "${BLUE}ğŸ“ Checking all file line counts...${RESET}"
CI=true node scripts/check-line-count.js
if [ $? -ne 0 ]; then
  echo "${RED}âŒ Line count check failed${RESET}"
  exit 1
fi

# Run tests if they exist
if [ -f "bun.lockb" ]; then
  echo "${BLUE}ğŸ§ª Running tests...${RESET}"
  bun test --bail
  if [ $? -ne 0 ]; then
    echo "${RED}âŒ Tests failed${RESET}"
    exit 1
  fi
fi

echo "${GREEN}${BOLD}âœ… All pre-push checks passed!${RESET}"